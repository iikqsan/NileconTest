@model IEnumerable<ContentModel>

@{
    ViewData["Title"] = "ข้อมูลข่าวสาร";
}

<div class="">
    <h3 class="">ข้อมูลข่าวสาร ทั้งหมด</h3>
</div>

@if(Model.Count() > 0){
    <div class="container text-center" >
        <div class="row row-cols-sm-6 row-cols-md-4 row-cols-md-3 g-sm-2 g-lg-3">
            @foreach (var content in Model)
            {
                <div class="col">
                    <div class="p-3">
                        <a style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="ViewContent" asp-route-id="@content.contentID">
                            <div style="padding-top:;" class="video-program__outer figure-img">
                                <img class="rounded-3" style="width: 258px; height: 145.77px;" src="@content.contentImage">
                            </div>
                            <figcaption class="figure-caption">
                                @content.contentTitle
                            </figcaption>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">ไม่มีข้อมูลในระบบ</div>
}